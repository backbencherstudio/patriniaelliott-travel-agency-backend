            },
            "url": {
              "raw": "{{base_url}}/booking",
              "host": ["{{base_url}}"],
              "path": ["booking"]
            }
          }
        }
      ]
    },
    {
      "name": "Get Bookings",
      "item": [
        {
          "name": "Get All Bookings",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/booking",
              "host": ["{{base_url}}"],
              "path": ["booking"]
            }
          }
        },
        {
          "name": "Get Bookings with Search",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/booking?q=hotel&status=1",
              "host": ["{{base_url}}"],
              "path": ["booking"],
              "query": [
                {
                  "key": "q",
                  "value": "hotel"
                },
                {
                  "key": "status",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "Get Specific Booking",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/booking/booking_abc123",
              "host": ["{{base_url}}"],
              "path": ["booking", "booking_abc123"]
            }
          }
        }
      ]
    },
